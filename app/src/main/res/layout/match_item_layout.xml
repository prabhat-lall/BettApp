<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#006ECD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_sports_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPL 2024"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            app:cardBackgroundColor="#454545"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/nav_button_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/iv_team_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/team_first"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_active_status" />

                <TextView
                    android:id="@+id/tv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#E4E1E1"
                    app:layout_constraintStart_toEndOf="@id/iv_team_one"
                    app:layout_constraintEnd_toStartOf="@id/iv_team_two"
                    app:layout_constraintTop_toTopOf="@id/iv_team_two"
                    app:layout_constraintBottom_toBottomOf="@id/iv_team_two"/>

                <ImageView
                    android:id="@+id/iv_team_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/team_second"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_active_status" />


                <TextView
                    android:id="@+id/btn_active_bets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Active bets"
                    android:textSize="18sp"
                    android:textColor="#F57F17"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_team_one"
                    android:background="@drawable/nav_button_background"/>

                <TextView
                    android:id="@+id/tv_team_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RCB"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/nav_button_background"
                    app:layout_constraintStart_toStartOf="@id/iv_team_one"
                    app:layout_constraintEnd_toEndOf="@id/iv_team_one"
                    app:layout_constraintTop_toBottomOf="@id/iv_team_one"/>

                <TextView
                    android:id="@+id/tv_team_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSK"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/nav_button_background"
                    app:layout_constraintStart_toStartOf="@id/iv_team_two"
                    app:layout_constraintEnd_toEndOf="@id/iv_team_two"
                    app:layout_constraintTop_toBottomOf="@id/iv_team_two"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

